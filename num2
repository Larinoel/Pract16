 public class Counter
    {
        public string Name { get; set; }
        public int Value { get; set; }

        public Counter(string name, int value)
        {
            Name = name;
            Value = value;
        }

       
        public static Counter operator +(Counter counter, int increment)
        {
            return new Counter(counter.Name, counter.Value + increment);
        }

        
        public int this[string index]
        {
            get
            {
                if (index.ToLower() == "value")
                    return Value;
                else
                    throw new ArgumentException("доступно только свойство 'value'");
            }
            set
            {
                if (index.ToLower() == "value")
                    Value = value;
                else
                    throw new ArgumentException("доступно только свойство 'value'");
            }
        }
        public override string ToString()
        {
            return $"{Name}: {Value}";
        }
    }
    class Program
    {
        static void Main()
        {
            var c = new Counter("счетчик", 10);
            c = c + 5;
            Console.WriteLine(c);           

            c["value"] = 20;
            Console.WriteLine(c["value"]);  
        }
    }
}
